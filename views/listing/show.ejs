<% layout('layouts/boilerplate') -%>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <img src="<%= (show.image && (show.image.url || show.image.path)) ? (show.image.url || show.image.path) : '' %>" class="card-img-top" alt="<%= show.title %>" style="height: 300px;">
            <div class="card-body">
                <h2 class="card-title"><%= show.title %></h2>
                <p><b>owner:</b><%=show.owner.username %></p>
                <p class="card-text"><%= show.description %></p>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Price:</strong> &#8377;<%= show.price ? show.price.toLocaleString("en-IN") : "N/A" %></p>
                        <p><strong>Location:</strong> <%= show.location %></p>
                        <p><strong>Country:</strong> <%= show.country %></p>
                    </div>
                </div>
                <% if(currentUser &&currentUser._id.equals(show.owner._id)) { %>
                <div class="mt-3">
                    <a href="/listing/<%= show._id %>/edit" class="btn btn-warning me-2">Edit</a>
                    <form method="POST" action="/listing/<%= show._id %>?_method=DELETE" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this listing?')">Delete</button>
                    </form>
                </div>
                <% } %>         
            </div>
        </div>
    </div>
</div>

<hr>
<div class="col-8 offset-md-2 mt-3" >
    <h4>Leave Review</h4>
    <form style="padding-right:174px ;" method="post" action="/listing/<%=show._id%>/reviews" novalidate class="needs-validation">
        
            
            <!-- <input type="range" class="form-control form-range" min="1" max="5" id="rating" name="review[Rating]"/>
        -->
   <div class="mt-3" >  
   <label for="rating" class="form-label">Rating</label>
  <fieldset class="starability-slot">
  
  <input type="radio" id="no-rate" class="input-no-rate" name="review[Rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[Rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[Rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[Rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[Rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[Rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
 </div>
        <div class="mt-3">
            <label for="comments"  class="form-label">comments</label>
            <textarea id="comments" name="review[review]" cols="20" rows="6" class="form-control" required></textarea>
            <div class="invalid-feedback">
                        Enter description more than 200 words review
                      </div>
        </div>
        <div class="mt-3 mb-3">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>

    </form>

</div>
<hr>

<div class="mt-3">
    <h4>Reviews</h4>
    <% if(show.review.length === 0){ %>
        <p>No reviews yet. Be the first to review!</p>
    <% } else { %>
        <div class="row">
        <% for(review of show.review) { %>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        
                        <p class="card-text"><%= review.review %></p>
                        <p class="card-text"><small class="text-muted">by <%= review.author && review.author.username ? review.author.username : 'Anonymous' %></small></p>
                         <p class="starability-result" data-rating="<%= review.Rating %>">
    Rated: 3 stars
  </p>
                        <p class="card-text"><small class="text-muted">Reviewed on <%= new Date(review.createdAt).toLocaleDateString() %></small></p>
                        <form method="POST" action="/listing/<%= show._id %>/reviews/<%= review._id %>?_method=DELETE" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this review?')">Delete Review</button>
                    </div>
                </div>
            </div>
        <% }; %>
        </div>
    <% } %>
</div>
