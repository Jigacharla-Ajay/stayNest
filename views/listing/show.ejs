<% layout('layouts/boilerplate') -%>

<div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8">
        <div class="card shadow-sm">
            <img src="<%= (show.image && (show.image.url || show.image.path)) ? (show.image.url || show.image.path) : '' %>" class="card-img-top" alt="<%= show.title %>" style="height: 300px; object-fit: cover;">
            <div class="card-body p-4">
                <h2 class="card-title mb-3"><%= show.title %></h2>
                <p class="text-muted mb-3"><i class="fa-solid fa-user"></i> <strong>Owner:</strong> <%=show.owner.username %></p>
                <p class="card-text mb-4"><%= show.description %></p>
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fa-solid fa-rupee-sign me-2 text-success"></i>
                            <strong>Price:</strong> &#8377;<%= show.price ? show.price.toLocaleString("en-IN") : "N/A" %>/night
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fa-solid fa-map-marker-alt me-2 text-primary"></i>
                            <strong>Location:</strong> <%= show.location %>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-globe me-2 text-info"></i>
                            <strong>Country:</strong> <%= show.country %>
                        </div>
                    </div>
                </div>
                <% if(currentUser &&currentUser._id.equals(show.owner._id)) { %>
                <div class="mt-4 d-flex flex-column flex-sm-row gap-2">
                    <a href="/listing/<%= show._id %>/edit" class="btn btn-warning">Edit Property</a>
                    <form method="POST" action="/listing/<%= show._id %>?_method=DELETE" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this listing?')">Delete Property</button>
                    </form>
                </div>
                <% } %>         
            </div>
        </div>
    </div>
</div>

<hr class="my-5">
<div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h4 class="card-title mb-4">Leave a Review</h4>
                <form method="post" action="/listing/<%=show._id%>/reviews" novalidate class="needs-validation">
                    <div class="mb-4">  
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[Rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[Rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[Rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[Rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[Rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[Rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-4">
                        <label for="comments" class="form-label">Your Review</label>
                        <textarea id="comments" name="review[review]" class="form-control" rows="4" required placeholder="Share your experience..."></textarea>
                        <div class="invalid-feedback">
                            Please provide a detailed review.
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">Submit Review</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<hr>

<div class="row justify-content-center mt-5">
    <div class="col-12 col-lg-10 col-xl-8">
        <h4 class="mb-4">Reviews</h4>
        <% if(show.review.length === 0){ %>
            <div class="text-center py-5">
                <i class="fa-solid fa-comment-slash fa-3x text-muted mb-3"></i>
                <p class="text-muted">No reviews yet. Be the first to review!</p>
            </div>
        <% } else { %>
            <div class="row g-3">
            <% for(review of show.review) { %>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-3">
                                <p class="starability-result" data-rating="<%= review.Rating %>">
                                    Rated: <%= review.Rating %> stars
                                </p>
                            </div>
                            <p class="card-text flex-grow-1"><%= review.review %></p>
                            <div class="mt-auto">
                                <p class="card-text"><small class="text-muted">
                                    <i class="fa-solid fa-user"></i> by <%= review.author && review.author.username ? review.author.username : 'Anonymous' %>
                                </small></p>
                                <p class="card-text"><small class="text-muted">
                                    <i class="fa-solid fa-calendar"></i> <%= new Date(review.createdAt).toLocaleDateString() %>
                                </small></p>
                                <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                                <form method="POST" action="/listing/<%= show._id %>/reviews/<%= review._id %>?_method=DELETE" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this review?')">
                                        <i class="fa-solid fa-trash"></i> Delete
                                    </button>
                                </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }; %>
            </div>
        <% } %>
    </div>
</div>
