
<% layout('/layouts/boilerplate')%>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Add Your Property</h2>
                    
                    <form method="post" action="/listing" class="needs-validation" novalidate enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input placeholder="Enter property title" name="listing[title]" class="form-control" required>
                            <div class="invalid-feedback">
                                Please provide a title.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea name="listing[description]" class="form-control" rows="4" required placeholder="Describe your property..."></textarea>
                            <div class="invalid-feedback">
                                Enter description more than 200 words
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label" for="image">Property Image</label>
                            <input type="file" name="listing[image]" class="form-control" accept="image/*">
                            <div class="form-text">Upload a high-quality image of your property</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input placeholder="Enter the location" type="text" name="listing[location]" class="form-control" required>
                            <div class="invalid-feedback">
                                Enter valid location
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="mb-3 col-12 col-md-6">
                                <label class="form-label" for="price">Price per night</label>
                                <div class="input-group">
                                    <span class="input-group-text">â‚¹</span>
                                    <input type="number" placeholder="Enter price" name="listing[price]" class="form-control" required min="0">
                                </div>
                                <div class="invalid-feedback">
                                    Please enter a valid price.
                                </div>
                            </div>
                            <div class="mb-3 col-12 col-md-6">
                                <label class="form-label" for="country">Country</label>
                                <input placeholder="Enter country" type="text" name="listing[country]" class="form-control" required>
                                <div class="invalid-feedback">
                                    Enter Valid Country
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button class="btn btn-dark btn-lg">Add Property</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

