<style>
  .search-container {
  display: flex;
  align-items: center;
  background-color: #f7f7f7;
  border-radius: 40px;
  padding: 8px 15px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
  width: 350px;
  max-width: 100%;
  transition: all 0.3s ease;
}

@media (max-width: 991.98px) {
  .search-container {
    width: 100%;
    margin: 0;
  }
}

.search-container:hover {
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.12);
}

.search-container input {
  flex: 1;
  border: none;
  outline: none;
  background: transparent;
  font-size: 15px;
  padding: 8px;
}

.search-container button {
  background: #ff385c; /* Airbnb-style pink-red */
  border: none;
  color: white;
  border-radius: 50%;
  width: 36px;
  height: 36px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  transition: background 0.3s ease;
}

.search-container button:hover {
  background: #e11d48;
}

</style>

